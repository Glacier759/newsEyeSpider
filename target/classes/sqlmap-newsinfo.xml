<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="newseye">
    <resultMap id="newsMap" type="NewsInfo">
        <result column="news_id" property="news_id" />
        <result column="title" property="title" />
        <result column="url" property="url" />
        <result column="newspaper" property="newspaper" />
        <result column="page" property="page" />
        <result column="publish_date" property="publish_date" />
        <result column="crawl_date" property="crawl_date" />
        <result column="body" property="body" />
    </resultMap>
    <sql id="newsinfoAll">
        id,
        news_id,
        title,
        url,
        newspaper,
        page,
        publish_date,
        crawl_date,
        body
    </sql>

    <insert id="insertNewsInfo" parameterType="newsinfo">
        INSERT INTO news(
        <include refid="newsinfoAll" />
        )
        VALUES
        (#id#,#new_id#,#title#,#url#,#newspaper#,#page#,#publish_date#,#crawl_date#,#body#)
    </insert>
	<select id="selectNewsInfo" parameterType="int" resultMap="newsMap">
		SELECT
		<include refid="newsinfoAll" />
		FROM news
		WHERE id = #{id}
	</select>

</mapper>
